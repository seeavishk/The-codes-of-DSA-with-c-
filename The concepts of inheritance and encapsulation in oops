using namespace std;
class j{
    public:
    int height;
    int weight;
    int age;
    public:
    int setage(int age){
       cout<<this->age;
    }

};
class male:public j{
    public:
    string color;
    void sleep(){
        cout<<"male sleeping"<<endl;
    }
};
int main()
{
j k;
cout<<k.setage(7)<<endl;
